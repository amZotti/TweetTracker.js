include layout.jade
body(ng-app="app").
  <main ng-controller="mainController">
    <h1>Tweet Tracker</h1>
    <div>
      <a href="https://plot.ly/~azotti/79/" target="_blank" title="" style="display: block; text-align: center;">
      <img src="https://plot.ly/~azotti/79.png" alt="" style="max-width: 100%;"  onerror="this.onerror=null;this.src='https://plot.ly/404.png';" />
      </a>
      <script data-plotly="azotti:79" src="https://plot.ly/embed.js" async></script>
    </div>
    <div id="graph-info">
      <h2>Current City:</h2> {{ city }}
      <h2>Current Keyword:</h2> {{ keyword }}
    </div>
    <h2>Keywords</h2>
    <ul>
      <li ng-repeat="k in keywords"><a href="#" ng-click="displayNewGraph(k)">{{ k }}</a></li>
    </ul>
  </main>
